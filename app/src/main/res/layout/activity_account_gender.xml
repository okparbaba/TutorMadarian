<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_light_white"
    android:orientation="vertical"
    tools:context="inc.osbay.android.tutormandarin.ui.activity.AccountGenderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:layout_marginTop="@dimen/toolbar_top_padding"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ac_gender_title"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/text_color_black"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imv_account_gender_back"
                android:layout_width="@dimen/icon_large_size"
                android:layout_height="@dimen/icon_large_size"
                android:layout_centerVertical="true"
                android:padding="13dp"
                android:src="@drawable/ic_arrow_left"
                android:textColor="@color/text_color_black"/>

            <TextView
                android:id="@+id/tv_account_gender_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/ac_gender_save"
                android:textAllCaps="true"
                android:textColor="@color/text_color_black"/>

        </RelativeLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_ac_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/rb_gender_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ac_gender_male"
            android:theme="@style/RadioButtonGreen"/>

        <RadioButton
            android:id="@+id/rb_gender_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ac_gender_female"
            android:theme="@style/RadioButtonGreen"/>

    </RadioGroup>
</LinearLayout>
