<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@color/light_white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_level_stator"
        android:layout_margin="30dp"/>

    <ImageView
        android:id="@+id/imv_level_rotor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_level_rotor"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/tv_level_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_centerVertical="true"
        android:text="B1"/>

    <TextView
        android:id="@+id/tv_level_b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:paddingTop="35dp"
        android:paddingStart="10dp"
        android:text="B2"/>

    <TextView
        android:id="@+id/tv_level_i1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:paddingTop="5dp"
        android:paddingStart="60dp"
        android:text="I1"/>

    <TextView
        android:id="@+id/tv_level_i2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignParentEnd="true"
        android:paddingTop="5dp"
        android:paddingEnd="60dp"
        android:text="I2"/>

    <TextView
        android:id="@+id/tv_level_a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignParentEnd="true"
        android:paddingTop="35dp"
        android:paddingEnd="10dp"
        android:text="A1"/>

    <TextView
        android:id="@+id/tv_level_a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="A2"/>
</RelativeLayout>