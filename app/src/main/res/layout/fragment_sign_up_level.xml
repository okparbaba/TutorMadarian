<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="5dp"
              tools:context="inc.osbay.android.tutormandarin.ui.fragment.SignUpLevelFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/very_large_margin">

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/level_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:kswBackColor="@color/light_red"
            app:kswTextOff="@string/adult"
            app:kswTextOn="@string/kid"
            app:kswThumbColor="@color/white"/>
        <!--<com.nightonke.jellytogglebutton.JellyToggleButton
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:jtbLeftText="@string/adult"
            app:jtbJelly="itself"
            />-->

        <inc.osbay.android.tutormandarin.ui.view.LevelSelectorLayout
            android:id="@+id/lsl_level"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/level_switch"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/large_margin"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_level_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Level Select"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/text_color_black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_level_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Level Select"
        android:textColor="@color/text_color_gray"/>

</LinearLayout>
