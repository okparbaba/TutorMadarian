<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_vocab_character"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/very_large_margin"
        android:layout_marginRight="@dimen/very_large_margin"
        android:padding="@dimen/normal_margin"
        android:textColor="@color/text_color_black" />

    <TextView
        android:id="@+id/tv_vocab_definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/very_large_margin"
        android:layout_marginRight="@dimen/very_large_margin"
        android:padding="@dimen/normal_margin"
        android:textColor="@color/vocab_definition" />

    <View
        android:id="@+id/vw_whats_on_grammar_vocab"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/gray" />
</LinearLayout>