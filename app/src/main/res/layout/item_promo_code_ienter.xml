<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:orientation="vertical"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:layout_marginBottom="5dp"
    >

    <TextView
        android:id="@+id/tv_pc_enter_code"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_widthPercent="20%"
        android:textColor="@color/text_color_black"
        />

    <TextView
        android:id="@+id/tv_pc_enter_type"
        android:layout_height="wrap_content"
        app:layout_widthPercent="22%"
        android:layout_toEndOf="@id/tv_pc_enter_code"
        android:textColor="@color/text_color_black"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_pc_enter_date"
        android:layout_height="wrap_content"
        app:layout_widthPercent="38%"
        android:textColor="@color/text_color_black"
        android:layout_toEndOf="@id/tv_pc_enter_type"
        />

    <TextView
        android:id="@+id/tv_pc_enter_reward"
        android:layout_height="wrap_content"
        app:layout_widthPercent="20%"
        android:layout_toEndOf="@id/tv_pc_enter_date"
        android:textColor="@color/text_color_black"
        android:layout_marginEnd="5dp"
        android:gravity="end"
        />

</android.support.percent.PercentRelativeLayout>