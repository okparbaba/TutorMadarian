<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:top="1dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#11000000"
                android:startColor="#33000000" />

            <size android:height="8dp" />

            <corners
                android:bottomLeftRadius="@dimen/basic_corner_radius"
                android:bottomRightRadius="@dimen/basic_corner_radius"
                android:topLeftRadius="@dimen/basic_corner_radius"
                android:topRightRadius="@dimen/basic_corner_radius" />

        </shape>
    </item>

    <item android:bottom="3dp"
        android:left="1dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <solid android:color="@color/btn_bg_rounded_yellow_normal" />

            <corners
                android:bottomLeftRadius="@dimen/basic_corner_radius"
                android:bottomRightRadius="@dimen/basic_corner_radius"
                android:topLeftRadius="@dimen/basic_corner_radius"
                android:topRightRadius="@dimen/basic_corner_radius" />

        </shape>
    </item>
</layer-list>